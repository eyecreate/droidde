<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="992dp"
    android:layout_height="fill_parent"
    android:layout_margin="30dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/newfilename"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/fileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" android:hint="Name of file without extension."/>

        <Spinner
            android:id="@+id/fileTypes"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:prompt="@string/pickfiletype" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_file_location"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/fileLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:editable="false"
            android:hint="Folder file will be created in."/>

        <Button
            android:id="@+id/newFileBrowse"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/file_browse"/>

    </LinearLayout>

    <Button
        android:id="@+id/createNewFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_file" />

</LinearLayout>